<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BaseNasaTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>

        <item name="android:statusBarColor">?superColor</item>
        <item name="android:navigationBarColor">?superColor</item>
        <item name="colorPrimary">?superColor_600</item>
        <item name="colorOnPrimary">?superColor_0</item>
        <item name="colorPrimaryContainer">?superColor_100</item>
        <item name="colorOnPrimaryContainer">?superColor_900</item>
        <item name="colorPrimaryInverse">?superColor_200</item>
        <item name="colorSecondary">?superColor_600</item>
        <item name="colorOnSecondary">?superColor_0</item>
        <item name="colorSecondaryContainer">?superColor_100</item>
        <item name="colorOnSecondaryContainer">?superColor_900</item>
        <item name="colorTertiary">?superColor_600</item>
        <item name="colorOnTertiary">?superColor_0</item>
        <item name="colorTertiaryContainer">?superColor_100</item>
        <item name="colorOnTertiaryContainer">?superColor_900</item>
        <item name="colorOnSurface">?superColor_900</item>

        <item name="bottomAppBarStyle">@style/myBottomAppBarStyle</item>
        <item name="bottomNavigationStyle">@style/myBottomNavigationView</item>

        <item name="superColor_0">#FFFFFF</item>
        <item name="superColor">#4a148c</item>
        <item name="superColor_100">#f2e4f4</item>
        <item name="superColor_200">#ce93d8</item>
        <item name="superColor_300">#ba68c8</item>
        <item name="superColor_400">#ab47bc</item>
        <item name="superColor_500">#9c27b0</item>
        <item name="superColor_600">#8e24aa</item>
        <item name="superColor_700">#7b1fa2</item>
        <item name="superColor_800">#6a1b9a</item>
        <item name="superColor_900">#4a148c</item>
    </style>
